<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mx.rrc.metnumapp.MetodoBairRay"
    tools:showIn="@layout/activity_metodo_bair_ray">

    <Button
        android:id="@+id/Calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Coeficientes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Calcular" />

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="54dp"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:text="MÃ©todo de Bairstow"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Instrucciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Titulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Introduce el grado y los coeficientes, separados por comas." />

    <EditText
        android:id="@+id/Coeficientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Instrucciones"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Coeficientes"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Coeficientes"
        app:srcCompat="@drawable/arbol" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Calcular"
        android:layout_marginTop="41dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/ResTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Resultado:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/Resultados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="18sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Titulo"
        android:layout_alignLeft="@+id/Instrucciones"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Instrucciones"
        app:srcCompat="@drawable/cane" />

    <EditText
        android:id="@+id/Grado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Coeficientes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/Coeficientes"
        android:layout_toStartOf="@+id/Coeficientes"
        android:ems="10"
        android:hint="Grado"
        android:inputType="textPersonName" />

</RelativeLayout>
